extends layout 

block content 
  div.form-content
    h1.form-title Log In
    form(method='POST' action='/user/log_in').passcode-form
      div.form-group
        label(for='username') Username:
        input#username(type='text' name='username' required=true autofocus value=(username ? username : ''))
      div.form-group
        label(for='password') Password:
        input#password(type='password' name='password' required=true autofocus)
      button(type='submit').submit-btn Log In

    if errors 
      ul 
        for error in errors
          li!= error.msg
