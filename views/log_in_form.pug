extends layout 

block content 
  h1 Log In
  form(method='POST' action='/user/log_in')
    label(for='username') Username:
    input#username(type='text' name='username' required=true autofocus value=(username ? username : ''))
    label(for='password') Password:
    input#password(type='password' name='password' required=true autofocus)
    button(type='submit') Log In

  if errors 
    ul 
      for error in errors
        li!= error.msg
