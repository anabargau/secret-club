extends layout 

block content 
  div #{title}
  form(action='' method='POST')
    label(for='usernama') Username: 
    input#username(type='text' required=true name='username' value=(user ? user.username : ''))
    label(for='password') Password:
    input#password(type='password' required=true name='password')
    label(for='confirm-password') Confirm Password:
    input#confirm-password(type='password' required=true name='confirm_password')
    button(type='submit') Sign Up
  if errors 
    ul 
      for error in errors
        li!= error.msg
