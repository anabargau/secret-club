extends layout 

block content  

  h1 Are you sure you want to delete this message?
  
  div #{message.title}
  div #{message.text}
  div #{message.author.username}
  div #{message.formatted_date}

  form(method='post' action='')
    input(type='hidden' name='messageid' required=true value=message._id)
    button(type='submit') Delete
    a(href='/') #[button(type='button') Cancel]